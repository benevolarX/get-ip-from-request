{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "ES2023",
      "ES2022",
      "ES2021",
      "ES2020",
      "ES2019",
      "ES2018",
      "ES2017",
      "ES2016",
      "ES2015",
      "ES7",
      "ES6",
      "ES5",
      "DOM"
    ],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "pretty": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "lib", "dist", "tests", "build"]
}
